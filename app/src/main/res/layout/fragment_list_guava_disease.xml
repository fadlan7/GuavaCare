<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ListGuavaDiseaseFragment">

        <TextView
            android:id="@+id/tv_guavaDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Penyakit Buah Jambu"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/lineBelowTextGuavaDiseases"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_guavaDiseases" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_diseases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            android:splitMotionEvents="false"
            tools:listitem="@layout/item_list_guava_disease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineBelowTextGuavaDiseases"
            app:layout_constraintWidth_percent=".9"
            />

        <TextView
            android:id="@+id/tv_LeafDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Penyakit Daun Jambu"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_list_diseases" />

        <View
            android:id="@+id/linebelowTextLeaf"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tv_LeafDiseases" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_leaf_diseases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            android:splitMotionEvents="false"
            tools:listitem="@layout/item_list_guava_disease"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linebelowTextLeaf"
            app:layout_constraintWidth_percent=".9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>